<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_on_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">
        <!-- LOGO -->
        <ImageView
            android:layout_width="@dimen/splash_button_width"
            android:layout_height="@dimen/splash_button_width"
            android:src="@drawable/iv_logo_splash"
            android:layout_centerHorizontal="true"/>

        <!-- LOGO AND BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- BUTTONS -->
            <ir.rasen.myapplication.ui.ButtonFont
                android:id="@+id/btn_splash_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/activity_vertical_margin_2x"
                android:text="@string/splash_login"
                android:background="@drawable/style_button_splash"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_larger"
                android:layout_gravity="center"
                android:onClick="login" />

            <ir.rasen.myapplication.ui.ButtonFont
                android:id="@+id/btn_splash_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="8dp"
                android:text="@string/splash_register"
                android:background="@drawable/style_button_splash"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_larger"
                android:layout_gravity="center"
                android:onClick="register" />
          </LinearLayout>
    </LinearLayout>
</RelativeLayout>