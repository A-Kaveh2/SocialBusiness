<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/rl_followers_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/button_on_dark" >

        <ImageButton
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="@dimen/actionbar_height"
            android:background="@drawable/style_button_menu"
            android:src="@drawable/ic_menu_back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:onClick="back"
            android:contentDescription="@null"/>

        <ir.rasen.myapplication.ui.TextViewFont
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text = "@string/followers" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_followers_actionbar">
        <ListView
            android:id="@+id/list_followers_followers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/activity_vertical_margin_1of8"/>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout><!-- From: file:/E:/Android/Workspace/RASENMyApplication/app/src/main/res/layout/fragment_followers.xml -->