<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:id="@+id/rl_friends_requests"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_view"
    android:layout_margin="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
    <ir.rasen.myapplication.ui.TextViewFont
        android:id="@+id/txt_friends_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/friend_request"
        android:layout_marginTop="@dimen/activity_vertical_margin_1of4"
        android:gravity="center"/>
    <ir.rasen.myapplication.ui.TextViewFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/accept_or_ignore_requests"
        android:gravity="center"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/gray"
        android:layout_marginTop="@dimen/activity_vertical_margin_1of4"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/profile_pic"
        android:layout_height="@dimen/profile_pic"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_menu_businesses"
        android:scaleType="centerInside"/>

</RelativeLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rl_friends_requests"/>
</RelativeLayout><!-- From: file:/E:/Android/Workspace/SocialBusiness/app/src/main/res/layout/layout_friends_requests.xml -->