<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bottom stroke ( background  color ) -->
    <item android:top="20dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/background" />
        </shape>
    </item>

    <!-- left and right strokes -->
    <item android:top="20dp"
        android:bottom="4dp">
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/secondary_text_dark" />
        </shape>
    </item>

    <!-- top corners -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="@android:color/secondary_text_dark" />
        </shape>
    </item>

    <!-- invisible bottom corners -->
    <item android:top="20dp"
        android:bottom="4dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list><!-- From: file:/F:/Android%20Projects/SocialBusiness/app/src/main/res/drawable/style_edittext_register.xml -->